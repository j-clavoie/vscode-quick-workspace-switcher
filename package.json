{
	"name": "quick-workspace-switcher",
	"displayName": "Workspace Switcher",
	"description": "Extension to quickly switch from one workspace to another one.",
	"version": "0.0.1",
	"publisher": "j-clavoie",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:quick-workspace-switcher.select"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "quick-workspace-switcher.select",
				"title": "Quick Workspace Switcher"
			}
		],
		"configuration": {
			"title": "Quick Workspace Switcher",
			"properties": {
				"quick-workspace-switcher.workspaces": {
					"type": "array",
					"default": [
						{
							"name": "Userfriendly name for this workspace",
							"path": "Full path to workspace including the workspace filename inside de folder"
						}
					],
					"description": "Enter the list of all workspaces desires in the extension. The full path must includes the filename of each workspace you want."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.12",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^5.11.0",
		"webpack-cli": "^4.2.0"
	}
}
